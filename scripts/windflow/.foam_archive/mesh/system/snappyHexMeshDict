FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    ground
	{
		type triSurfaceMesh;
		file "ground.stl";
	}
    inlet
	{
		type triSurfaceMesh;
		file "inlet.stl";
	}
    walls
	{
		type triSurfaceMesh;
		file "walls.stl";
	}
	top
	{
		type triSurfaceMesh;
		file "top.stl";
	}
}

castellatedMeshControls
{
    maxLocalCells 100000;
    maxGlobalCells 8000000;
    minRefinementCells 5;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 2;

    refinementSurfaces
    {
        ground{ level (0 0);}
        inlet{ level (0 0);}
        walls{ level (0 0);}
		top{ level (0 0);}
    }

    resolveFeatureAngle 4;
    allowFreeStandingZoneFaces false;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 4.0;
    nSolveIter 100; //300
    nRelaxIter 10;
    nFeatureSnapIter 10;
    implicitFeatureSnap false;
    explicitFeatureSnap true;
    multiRegionFeatureSnap false;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 4;
    maxInternalSkewness 2;  // 1 volt
    maxConcave 80;
    minVol 1e-13;
    minTetQuality -1;
    minArea -1;
    minTwist 0.01;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;
    nSmoothScale 4;
    errorReduction 0.75;
    relaxed
    {
        maxNonOrtho 75;
    }
}

mergeTolerance 1e-4;


